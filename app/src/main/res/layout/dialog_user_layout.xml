<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/logo_bar_height"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:paddingLeft="@dimen/text_field_marginSides"
        android:gravity="center_vertical"
        android:textSize="@dimen/logo_text_size"
        android:background="@color/average_grey"
        android:contentDescription="@string/app_name"
        android:id="@+id/dialog_title"/>

    <EditText
        android:id="@+id/email"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_field_marginTop"
        android:layout_marginLeft="@dimen/text_field_marginSides"
        android:layout_marginRight="@dimen/text_field_marginSides"
        android:layout_marginBottom="@dimen/text_field_margin"
        android:hint="Email" />
    <EditText
        android:id="@+id/password"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_field_margin"
        android:layout_marginLeft="@dimen/text_field_marginSides"
        android:layout_marginRight="@dimen/text_field_marginSides"
        android:fontFamily="sans-serif"
        android:hint="Password"/>
    <EditText
        android:id="@+id/password2"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_field_margin"
        android:layout_marginLeft="@dimen/text_field_marginSides"
        android:layout_marginRight="@dimen/text_field_marginSides"
        android:layout_marginBottom="@dimen/text_field_margin"
        android:fontFamily="sans-serif"
        android:hint="Re-enter"/>

</LinearLayout>